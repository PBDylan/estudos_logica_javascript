//São blocos de códigos que só serão executados se determinada expressão for verdadeira
//IF (se), só executa se for "True"
let eh_ligado = false
    if(eh_ligado){
        console.log("Executou comando")
    }
//Não funciona o acima pois é falso

let ligadex = true
    if(ligadex){
        console.log("Executou o comando")
    }
//Funcionou pois "ligadex é true"

//Else (Se não), ele vem sempre em seguido do if
let possui_ovos = false
let itens_comprados = ""
    if (possui_ovos){
        itens_comprados = "Leite"
    }
else{
    console.log("Passou na sessão de congelados")
    itens_comprados = "Lasanha congelada"
}
console.log("Os items comprados foram: " + itens_comprados)


//Else If (Um if encadeado)
let nivel_de_fome = 1

//É igual a 1?
if(nivel_de_fome ===1) {
    console.log("Você está com pouca fome")
//Se não, verifica se é igual 2 
}else if(nivel_de_fome ===2){
    console.log("Você está com muita fome")
//Se não for igual a 2 então funciona o else
}else{
    console.log("Você comeria mais que o pica pau")
}
//Se exceder ao número 2, tipo um 10, o else continua sendo executado
